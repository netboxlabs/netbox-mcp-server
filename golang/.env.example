# NetBox MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: NetBox instance URL
NETBOX_URL=https://netbox.example.com

# Required: NetBox API token
NETBOX_TOKEN=your_api_token_here

# Optional: Transport protocol (stdio or http)
# Default: stdio
TRANSPORT=stdio

# Optional: Host for HTTP server (only used when TRANSPORT=http)
# Default: 127.0.0.1
HOST=127.0.0.1

# Optional: Port for HTTP server (only used when TRANSPORT=http)
# Default: 8000
PORT=8000

# Optional: Verify SSL certificates
# Default: true
VERIFY_SSL=true

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
LOG_LEVEL=INFO
